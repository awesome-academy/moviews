<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageNoInternet"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/image_no_internet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5" />

    <TextView
        android:id="@+id/textNoInternet"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/text_no_internet"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp_24"
        android:textStyle="bold"
        app:layout_constraintDimensionRatio="1:0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageNoInternet"
        app:layout_constraintWidth_percent="1" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chipRetry"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/text_retry"
        android:textAlignment="center"
        android:textSize="@dimen/sp_24"
        app:layout_constraintDimensionRatio="1:0.4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textNoInternet"
        app:layout_constraintWidth_percent="0.4" />

</androidx.constraintlayout.widget.ConstraintLayout>
